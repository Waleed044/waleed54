<%= form_with model: @category, local: true do |form| %>
 
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@category.errors.count, "error") %> prohibited
        this category from being saved:
      </h2>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <%= form.fields_for :attachments do |picture| %>
    <%= picture.label :attachments, style: "display: block" %>
    <%= picture.file_field :attachments, multiple: true %>
  <% end %>

  <p>
    <%= form.submit %>
  </p>
 
<% end %>