<h2> Categories </h2>

<%= link_to 'New Category', new_category_path%><br><br>
 <% @categories.each do |category| %>
        <%= category.name %>
        <%= link_to 'Show', category_path(category) %>
        <%= link_to 'Edit', category_path(category) %>
        <%= link_to 'Destroy', category_path(category),
                method: :delete,
                data: { confirm: 'Are you sure?' } %><br>  
    <% end %>